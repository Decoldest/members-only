extends layout

block content 

  if user && user.membership
  form(method='POST' action="")
    div.form-group
      label(for='username') Username: 
      input#title.form-control(type='text', name='username' required value=(undefined===user ? '' : user.username) )
    div.form-group
      label(for='password') Password: 
      input#title.form-control(type='password', name='password' required)
    button.btn.btn-primary(type='submit') Log In

  if errors
    ul
      for error in errors
        li!= error.msg