extends layout 

block content 
  h1 #{title}
  form(method='POST')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type="text", name="title" required value= (undefined===message ? '' : message.title)) 
    div.form-group
      label(for='text') Message:
      textarea#title.form-control(name='text' required)= undefined===messsage ? '' : message.text
    button.btn.btn-primary(type='submit') Post Message
  
  if errors
    ul
      for error in errors
        li!= error.msg