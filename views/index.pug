extends layout

block content
  h1= title
  p Welcome to #{title}

  p #{user}

  if user
    button 
      a(href="/logout") Log Out 
    if !user.membership
    button 
      a(href="/membership") Get Access
  else 
    button 
      a(href="/sign-up") Sign Up
    button 
      a(href="/login") Log In
  