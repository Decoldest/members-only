extends layout

block content
  h1 #{title}
  h4 Are you sure you want to delete this message?

  if user
    button 
      a(href="/logout") Log Out 
    button 
      a(href="/message") Create Message
    if !user.membership
      button 
        a(href="/membership") Get Access
    
  else 
    h4 Sign Up or Log In to post a message
    button 
      a(href="/sign-up") Sign Up
    button 
      a(href="/login") Log In
  
  
  for message in messages 
    if user && user.membership
      h4 #{message.author.username} 
      h2 #{message.title}
      p #{message.text}
      h5 #{message.time}
      if user.admin 
        button
          a(href=`/message/${message.id}/delete`) Delete Message
    else
      h2 #{message.title}
      p #{message.text}
  
  